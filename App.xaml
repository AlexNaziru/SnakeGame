<Application x:Class="SnakeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeGame"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#003049</SolidColorBrush>
        <SolidColorBrush x:Key="GridBacgroundColor">#03045e</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#eae2b7</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#edede9</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
